		<title>Моя первая верстка</title>
		<link href="../public/css/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>FOOTBALL TOURNAMENT</header>
		<main>
			<div class="nav-bar">
				<ul>
					<li class="active" data-type="stangings">Show current standings</li>
					<li data-type="statistics">Show current statistics</li>
					<li data-type="settings">Change tournament settings</li>
				</ul>
			</div>
			<div class="content">
				<table class="tournament-table display-block" data-type="stangings">
					<thead>
						<tr>
							<td>#</th>
							<td>Team</th>
							<td>Points</th>
							<td>Year</th>
						</tr>
					</thead>
				
					<tbody>
						<tr>
							<td>1</td>
							<td>Honda</td>
							<td>Accord</td>
							<td>2009</td>
						</tr>
				
						<tr>
							<td>2</td>
							<td>Toyota</td>
							<td>Camry</td>
							<td>2012</td>
						</tr>
				
						<tr>
							<td>3</td>
							<td>Hyundai</td>
							<td>Elantra</td>
							<td>2010</td>
						</tr>
					</tbody>
				</table>

				<div class="tournament-statistics display-none" data-type="statistics">
					stats
				</div>
				<div class="tournament-settings display-none" data-type="settings">
					settings
				</div>
			</div>
		</main>
	</body>

