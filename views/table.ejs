<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Моя первая верстка</title>
		<link href="../public/css/style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>FOOTBALL TOURNAMENT</header>
		<main>
			<%- include("blocks/nav-bar.ejs") %>
			<div class="content">
				<table class="tournament-table display-block" data-type="stangings">
					<thead>
						<tr>
							<td>#</td>
							<td>id</td>
							<td>Team</td>
							<td>Points</td>
							<td>Year</td>
						</tr>
					</thead>
				
					<tbody>
						<% let counter = 0; teams.forEach(function(el){ %>
							<tr>
								<td><%= counter.toString();%></td>
								<td><%= el.id.toString(); %></td>
								<td><a href="/team/<%= el.id.toString();%>"><%= el.name %></a></td>
								<td><%= el.points%></td>
								<td>Year</td>
							</tr>
						<% counter++; }) %>
					</tbody>
				</table>
			</div>
		</main>
	</body>

	<script src="../public/js/jquery-3.4.1.min.js"></script>
	<script src="../public/ts/main.js"></script>
</html>